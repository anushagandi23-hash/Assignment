{
  "info": {
    "_postman_id": "modex-ticket-booking",
    "name": "Modex Ticket Booking System",
    "description": "Complete API collection for Modex Ticket Booking System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["health"]
        },
        "description": "Check if backend is running"
      }
    },
    {
      "name": "Shows",
      "item": [
        {
          "name": "Get All Shows",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:4000/api/shows",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4000",
              "path": ["api", "shows"]
            },
            "description": "Fetch list of all available shows"
          }
        },
        {
          "name": "Get Show by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:4000/api/shows/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4000",
              "path": ["api", "shows", "1"]
            },
            "description": "Fetch show details with seat information. Replace 1 with actual show ID."
          }
        },
        {
          "name": "Create Show (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bus: Mumbai to Delhi\",\n  \"startTime\": \"2024-12-20T10:00:00Z\",\n  \"totalSeats\": 40\n}"
            },
            "url": {
              "raw": "http://localhost:4000/api/admin/shows",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4000",
              "path": ["api", "admin", "shows"]
            },
            "description": "Create a new show (Admin only). Returns show details with total seats created."
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Book Seats",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"seatNumbers\": [\"A1\", \"A2\", \"B1\"]\n}"
            },
            "url": {
              "raw": "http://localhost:4000/api/shows/1/book",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4000",
              "path": ["api", "shows", "1", "book"]
            },
            "description": "Book seats for a show. Uses database transactions with row-level locking to prevent race conditions. Returns booking confirmation with ID."
          }
        },
        {
          "name": "Get Booking Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:4000/api/bookings/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4000",
              "path": ["api", "bookings", "1"]
            },
            "description": "Fetch booking details including status and booked seats. Replace 1 with actual booking ID."
          }
        },
        {
          "name": "Expire Pending Bookings (Admin)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:4000/api/admin/bookings/expire",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4000",
              "path": ["api", "admin", "bookings", "expire"]
            },
            "description": "Mark expired PENDING bookings as FAILED and release seats. Should be called periodically (e.g., every minute via cron)."
          }
        }
      ]
    }
  ]
}
